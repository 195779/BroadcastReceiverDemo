<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".IntentDemo">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_intentActivity"
        android:text="打开ActivityStart活动"
        android:textAllCaps="false"
        android:textSize="18dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_ActivityCommunication"
        android:text="打开ActivityCommunication活动"
        android:textAllCaps="false"
        android:textSize="18dp"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_activity_intent_resolution"
        android:text="打开IntentResolutionActivity活动"
        android:textAllCaps="false"
        android:textSize="18dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_broadcast"
        android:text="打开ActivityToBroadcast活动"
        android:textSize="18dp"
        android:textAllCaps="false"/>

</LinearLayout>